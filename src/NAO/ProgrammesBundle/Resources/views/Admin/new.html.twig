{# src/NAO/ProgrammesBundle/Resources/views/Admin/new.html.twig #}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/programme.css') }}">
{% endblock %}
{% block body %}
    <article class="blog-new container">
        <h1 class="title">
            <span>Nouveau programme</span>
        </h1>
        <div class="snippet">
            {{ form_start(form) }}
                {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.blog) }}
                {{ form_row(form.author, {'attr': {'class': 'form-control', 'value': 'NAO - Association'}}) }}
                <input type="submit" value="Enregistrer" class="btn btn-default btn-contact center-block"/>
            {{ form_end(form) }}
        </div>
    </article>

    <!--TinyMCE - BUNDLE-->
    {{ tinymce_init({'theme': {'simple': {'language': app.request.locale, 'menubar': false}}}) }}
{% endblock %}