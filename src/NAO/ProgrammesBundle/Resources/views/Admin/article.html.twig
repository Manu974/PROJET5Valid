{# src/NAO/ProgrammesBundle/Resources/views/Admin/article.html.twig #}

{% block body %}
    <article class="blog">
        <header>
            <h2><a href="{{ path('nao_admin_view', { 'id': blog.id, 'slug': blog.slug }) }}">{{ blog.title }}</a></h2>
        </header>
        <div class="snippet">
            {{ form_start(form) }}
                {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.blog) }}
                {{ form_row(form.author, {'attr': {'class': 'form-control'}}) }}
                <input type="submit" value="Enregistrer" class="btn btn-default btn-contact center-block"/>
            {{ form_end(form) }}
        </div>
    </article>

    <!--TinyMCE - BUNDLE-->
    {{ tinymce_init({'theme': {'simple': {'language': app.request.locale, 'menubar': false}}}) }}
{% endblock %}