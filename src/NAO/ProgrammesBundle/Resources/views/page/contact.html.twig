{# src/NAO/ProgrammesBundle/Resources/views/Page/contact.html.twig #}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1 class="form_title"><i class="fa fa-envelope" aria-hidden="true"></i> Contacter L'association</h1>
    </header>

    {{ form_start(form, {'attr': {'class': 'well contact'}}) }}
        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.sujet, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
        <input type="submit" value="Envoyer" class="btn btn-default btn-contact center-block"/>
    {{ form_end(form) }}

{% endblock %}