{# src/NAO/ProgrammesBundle/Resources/views/Page/contact.html.twig #}

{% block stylesheets %}
    {% if isAjaxCall %}
        <link rel="stylesheet" href="{{ asset('css/pages/contactAjax.css') }}">
    {% else %}
        <link rel="stylesheet" href="{{ asset('css/Skeleton-2.0.4/css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/Skeleton-2.0.4/css/skeleton.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="stylesheet" href="{{ asset('css/pages/contact.css') }}">
    {% endif %}
{% endblock %}

{% block body %}
    <div class="contact-content container">
        <header>
            <h1 class="title"><span>Contact</span><i class="icon--large icon--contact is_active"></i></h1>
            <div class="divider"></div>
        </header>

        {{ form_start(form, {'attr': {'class': 'well contact'}}) }}
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.sujet, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
            <button type="submit" class="btn btn--large">
                <i class="icon--small icon--send"></i>
                <span>Envoyer</span>
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
