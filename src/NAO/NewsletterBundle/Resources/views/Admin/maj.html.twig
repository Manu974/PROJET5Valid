{# src/NAO/NewsletterBundle/Resources/views/Admin/newsletter.html.twig #}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/newsletter.css') }}">
{% endblock %}
{% block body %}
    <div class="container container-newsletter">
        <article class="newsletter">
            <header>
                <h2><a href="{{ path('nao_admin_newsletter') }}">{{ newsletter.title }}</a></h2>
            </header>
            <div class="snippet">
                {{ form_start(form) }}
                    {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(form.newsletter) }}
                    {{ form_row(form.author, {'attr': {'class': 'form-control'}}) }}
                    <input type="submit" value="Enregistrer" class="btn btn-default btn-contact center-block"/>
                {{ form_end(form) }}
            </div>
        </article>
    </div>

    <!--TinyMCE - BUNDLE-->
    {{ tinymce_init({'theme': {'simple': {'language': app.request.locale, 'menubar': false}}}) }}
{% endblock %}